@model Item

<div class="max-w-full h-screen flex bg-totem-pole-100 mx-auto">
    <div class="mx-auto w-3/4 max-w-6xl self-center bg-white p-5 rounded-lg">
        <form asp-action="CreateItem" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="my-4 box border rounded flex flex-col shadow bg-white">
                <div class="box__title bg-viking-200 px-3 py-2 border-b">
                    <h3 class="py-2 text-lg text-gray-800 font-bold">Create Item Type</h3>
                    <h3 class="py-2 text-base text-gray-800 font-normal">*Item Types are strictly the definition of the physical item type. It is not a reference to any instances or specifics within the museum. Item Instances or instances of Item Types are used to record and keep track of inventory and usage.</h3>
                </div>
                <div class="text-grey-darkest flex-1 p-2 m-1 text-lg">
                    <label class="block mb-2 text-base font-bold text-gray-700">Enter Name of Item</label>
                    <input asp-for="@Model.Name" type="text" class="w-full px-3 py-2 text-md font-semibold leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="text-grey-darkest flex-1 p-2 m-1 text-lg">
                    <label class="block mb-2 text-base font-bold text-gray-700">Enter Description of Item Type</label>
                    <textarea asp-for="@Model.ItemDescription" class="w-full px-3 py-2 text-md font-semibold leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" rows="3"></textarea>
                    <span asp-validation-for="@Model.ItemDescription" class="text-danger"></span>
                </div>
            </div>

            <div class="container flex flex-col">
                <input type="submit" value="Create Item Type" class="hc-btn btn-mm-outline" />
            </div>
        </form>
    </div>
</div>
