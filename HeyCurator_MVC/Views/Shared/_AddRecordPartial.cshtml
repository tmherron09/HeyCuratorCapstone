@model RecordFull

@{


    SelectList Storages = new SelectList(Model.Storages, "StorageId", "Name");
}


<div class="my-5 mx-10 flex w-1/3 py-4 justify-center bg-white dark:bg-gray-600 shadow-xl rounded-lg cursor-pointer">

    <form asp-action="CreateNewRecord" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label class="block text-gray-900 text-xl text-center font-semibold mb-2">Current Amount</label>
        <input type="number" asp-for="@Model.NewRecordedAmount" />
        <label class="block text-gray-900 text-xl text-center font-semibold mb-2">Storage Location</label>
        <select asp-for="@Model.ChoosenStorageId" class="border-b-2 border-gray-400 focus-within:border-teal-500" asp-items="@Storages">
            <option selected="selected" value="">Please select</option>
        </select>
    </form>


</div>