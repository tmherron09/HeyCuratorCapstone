@model EmpAssignCurRolViewModel



<form asp-controller="Admin" asp-action="EmpAssignCurRol" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <fieldset>
        <legend class="text-base font-medium text-gray-900">Select Curator Roles:</legend>
        <div class="my-8 space-y-4">
            <div class="flex flex-wrap justify-start">
                <input type="hidden" asp-for="EmployeeId" />
                <input type="hidden" asp-for="EmployeeName" />
                <input type="hidden" asp-for="AlreadyAssigned" />

                @foreach (var curRol in Model.CuratorRoles)
                {
                    <div class="flex items-center my-4 h-6 w-1/3 md:w-1/5">
                        <input @(Model.AlreadyAssigned.Contains(curRol.CuratorRoleId) ? "checked" : "") name="ChoosenCuratorRoles" type="checkbox" value="@curRol.CuratorRoleId" class="focus:ring-indigo-500 h-6 w-6 text-indigo-600 border-gray-300 rounded">
                        <label class="font-medium text-gray-700 ml-3">@curRol.NameOfRole</label>
                    </div>
                }

            </div>
        </div>
        <div class="container flex flex-col">
            <input type="submit" value="Assign Curator Roles to @Model.EmployeeName" class="hc-btn btn-mm-outline" />
        </div>
    </fieldset>
</form>

