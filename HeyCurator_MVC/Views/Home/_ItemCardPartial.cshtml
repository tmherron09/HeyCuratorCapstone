<div class="xl:w-1/3 md:w-1/2 p-4">
    <div class="border border-gray-300 p-6 rounded-lg bg-white bg-shadow">
        <div class="w-10 h-10 inline-flex items-center justify-center rounded-full bg-indigo-100 text-indigo-500 mb-4">
            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-6 h-6" viewBox="0 0 24 24">
                <circle cx="6" cy="6" r="3"></circle>
                <circle cx="6" cy="18" r="3"></circle>
                <path d="M20 4L8.12 15.88M14.47 14.48L20 20M8.12 8.12L12 12"></path>
            </svg>
        </div>
        <div class="bg-gray-300 border-l-4 border-purple-400 text-gray-700 p-4" role="alert">
            <h2 class="text-lg text-gray-900 font-medium title-font mb-2">Wooden Balls</h2>
            <p class="leading-relaxed text-base">Small wooden balls for Balls N' Motion and Music Play Music.</p>
        </div>
        <div class="accordion bg-red-400 text-white font-bold rounded-t px-4 py-2 mt-4 border-b-4 border-purple-400 focus:border-b-0">
            Exhibits
        </div>
        <div class="panel border border-t-0 border-red-400 rounded-b bg-red-100 px-4 py-3 text-red-700">
            <select type="selectlist" class="block w-full mt-2 p-1 border-2 border-gray-500 rounded focus:border-indigo-500 focus:shadow-lg">
                <option value="Hi">the spiral</option>
                <option value="Hi">loop the loop</option>
                <option value="Hi">the big u</option>
                <option value="Hi">plinko</option>
                <option value="Hi">work together</option>
                <option value="Hi">Balls N Motion DIY</option>
                <option value="Hi">Balls N Motion Magnetic Wall</option>
            </select>
        </div>
    </div>
</div>





<script>


    var acc = document.getElementsByClassName("accordion");
    var i;

    for (i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function () {
            /* Toggle between adding and removing the "active" class,
            to highlight the button that controls the panel */
            this.classList.toggle("active");

            /* Toggle between hiding and showing the active panel */
            var panel = this.nextElementSibling;
            if (panel.style.display === "block") {
                panel.style.display = "none";
            } else {
                panel.style.display = "block";
            }
        });
    }


</script>


