@model HeyCurator_MVC.Models.PurchaserNotification

@{
    ViewData["Title"] = "Create";

}


<h4>Request for Item Purchase</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="ItemId" class="control-label"></label>
                <select asp-for="ItemId" class ="form-control" asp-items="ViewBag.ItemId"></select>
            </div>

            <div class="form-group">
                <label asp-for="AmountRequested" class="control-label"></label>
                <input asp-for="AmountRequested" class="form-control" />
                <span asp-validation-for="AmountRequested" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OrderUrgency" class="control-label"></label>
                <select asp-for="OrderUrgency" class="form-control" asp-items="Html.GetEnumSelectList<OrderUrgency>()"></select>
                <span asp-validation-for="OrderUrgency" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CuratorNote" class="control-label"></label>
                <textarea rows="4" asp-for="CuratorNote" class="form-control"></textarea>
                <span asp-validation-for="CuratorNote" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Request" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
