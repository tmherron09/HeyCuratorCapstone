@using HeyCurator_MVC.Models 
@model List<Item>


<div class="mx-10 flex justify-center bg-white dark:bg-gray-600 shadow-xl rounded-lg cursor-pointer">
    <table id="tablePreview" class="table table-striped table-hover table-sm table-bordered mb-0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].MinCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].DateOfLastUpdate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].UpdateByDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].DateNotifyCurators)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].RecordedStorageAmount)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].MinCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].DateOfLastUpdate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].UpdateByDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].DateNotifyCurators)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].RecordedStorageAmount)
                    </td>
                    <td>
                        <input type="button" asp-controller="Item" asp-action="Details" asp-route-id="@Model[i].ItemId" class="btn btn-indigo btn-sm m-0" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



