@page
@model RegisterModel
@{
    ViewData["Title"] = "Register New Employee";
}

<h1 class="mt-10">@ViewData["Title"]</h1>
<hr />
<div class="row mx-auto">
    <div class="col-md-8">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="Input.Email" class="block text-gray-600 text-sm font-semibold mb-2"></label>
                <input asp-for="Input.Email" class="border-b-2 border-gray-400 focus-within:border-teal-500" />
                <br />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="block text-gray-600 text-sm font-semibold mb-2"></label>
                <input asp-for="Input.Password" class="border-b-2 border-gray-400 focus-within:border-teal-500" />
                <br />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="block text-gray-600 text-sm font-semibold mb-2"></label>
                <input asp-for="Input.ConfirmPassword" class="border-b-2 border-gray-400 focus-within:border-teal-500" />
                <br />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName" class="block text-gray-600 text-sm font-semibold mb-2"></label>
                <input asp-for="Input.FirstName" class="border-b-2 border-gray-400 focus-within:border-teal-500" />
                <br />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName" class="block text-gray-600 text-sm font-semibold mb-2"></label>
                <input asp-for="Input.LastName" class="border-b-2 border-gray-400 focus-within:border-teal-500" />
                <br />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                    <label asp-for="Input.Role"></label>
                    <select asp-for="Input.Role" class="border-b-2 border-gray-400 focus-within:border-teal-500" aspitems="@regModel.Roles" disabled="@Model.Input.IsCurator"></select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="Input.CuratorRoleId" class="block text-gray-600 text-sm font-semibold mb-2"></label>
                <select asp-for="Input.CuratorRoleId" class="form-control" asp-items="@Model.CuratorRoles"></select>
                <br />
                <span asp-validation-for="Input.CuratorRoleId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
