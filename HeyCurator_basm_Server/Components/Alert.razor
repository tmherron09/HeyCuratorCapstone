<div class=" text-center text-gray-100 py-4 lg:px-4">
    <div class=@($"p-2 bg-{AlertClassColor}-800 items-center text-${AlertClassColor}-100 leading-none lg:rounded-full flex lg:inline-flex") role="alert">
        <span class=@($"flex rounded-full bg-{AlertClassColor}-500 uppercase px-2 py-1 text-xs font-bold mr-3")>@Pill</span>
        <span class="font-semibold mr-2 text-left flex-auto">
            @ChildContent
        </span>
        <svg class="fill-current opacity-75 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.95 10.707l.707-.707L8 4.343 6.586 5.757 10.828 10l-4.242 4.243L8 15.657l4.95-4.95z" /></svg>
    </div>
</div>

@code {

    public enum AlertType
    {
        Success,
        Failure,
        Warning
    }

    [Parameter]
    public AlertType Type { get; set; } = AlertType.Success;

    [Parameter]
    public string Pill { get; set; } = "Success";

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    string AlertClassColor
    {
        get
        {
            switch(Type)
            {
                case AlertType.Success:
                    return "indigo";
                case AlertType.Warning:
                    return "pink";
                case AlertType.Failure:
                    return "red";
                default:
                    return "indigo";
            }
        }
    }
}
